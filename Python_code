# Funci√≥n para generar un imperio aleatorio
def generar_imperio():
    continente = random.randint(1, 4)
    if continente == 1:
        imperio = random.choice(list(imperios_africa.keys()))
        paises = imperios_africa[imperio]
        origen = "√Åfrica"
    elif continente == 2:
        imperio = random.choice(list(imperios_europa.keys()))
        paises = imperios_europa[imperio]
        origen = "Europa"
    elif continente == 3:
        imperio = random.choice(list(imperios_asia.keys()))
        paises = imperios_asia[imperio]
        origen = "Asia"
    else:
        imperio = random.choice(list(imperios_america.keys()))
        paises = imperios_america[imperio]
        origen = "Am√©rica"
    
    resultado_text.set(f"üåç Continente: {origen}\nüèõ Imperio: {imperio}\nüìç Estuvo en: {paises}")

# Crear ventana
ventana = tk.Tk()
ventana.title("Simulador de Imperios")
ventana.geometry("462x231")
ventana.configure(bg='#1E4963')

# Variable de resultado
resultado_text = tk.StringVar()
resultado_label = tk.Label(
    ventana,
    textvariable=resultado_text,
    justify="left",
    font=("TeleVision", 15),
    fg="white",
    bg="#1E4963"
)
resultado_label.pack(pady=20)

# Bot√≥n para generar imperio
boton = tk.Button(
    ventana,
    text="Generar imperio",
    command=generar_imperio,
    font=("TeleVision", 15),
    bg="#2E8BC0",
    fg="white"
)
boton.pack(pady=10)

# Bot√≥n para salir
salir_btn = tk.Button(
    ventana,
    text="Salir",
    command=ventana.destroy,
    font=("TeleVision", 15),
    bg="#D64545",
    fg="white"
)
salir_btn.pack(pady=10)

# Iniciar la interfaz
ventana.mainloop()
